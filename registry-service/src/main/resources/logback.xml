<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
    <!-- Suppress status messages -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />
    
    <!-- Console appender with ANSI colors -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%cyan(%d{HH:mm:ss.SSS}) %highlight(%-5level) %yellow([%thread]) %green(%logger{36}) %blue(â–¸) %msg%n</pattern>
        </encoder>
        <withJansi>true</withJansi>
    </appender>
    
    <!-- File appender for persistent logs -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/registry.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/registry.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Async appender for better performance -->
    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="FILE"/>
        <queueSize>500</queueSize>
        <discardingThreshold>0</discardingThreshold>
    </appender>
    
    <!-- Root logger configuration -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ASYNC_FILE"/>
    </root>
    
    <!-- Specific logger configurations -->
    <logger name="sh.harold.fulcrum.registry" level="${REGISTRY_LOG_LEVEL:-INFO}"/>
    <logger name="sh.harold.fulcrum.registry.handler" level="${HANDLER_LOG_LEVEL:-INFO}"/>
    <logger name="sh.harold.fulcrum.registry.heartbeat" level="${HEARTBEAT_LOG_LEVEL:-INFO}"/>
    
    <!-- External library log levels -->
    <logger name="io.lettuce" level="WARN"/>
    <logger name="io.lettuce.core.protocol" level="ERROR"/>
    <logger name="org.quartz" level="WARN"/>
    
    <!-- Performance tracking logger -->
    <logger name="performance" level="DEBUG" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>
</configuration>